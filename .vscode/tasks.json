{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "backend: clean start (8080)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        "$p=(Get-NetTCPConnection -LocalPort 8080 -State Listen -ErrorAction SilentlyContinue | Select-Object -ExpandProperty OwningProcess -Unique); if($p){$p | ForEach-Object {Stop-Process -Id $_ -Force -ErrorAction SilentlyContinue}}; .\\mvnw.cmd spring-boot:run --% -Dspring-boot.run.profiles=dev"
      ],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": [
          {
            "regexp": "^(.*)$",
            "message": 1
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "\\[INFO\\] Scanning for projects",
          "endsPattern": "Tomcat started on port 8080"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "backend: stop (8080)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        "$p=(Get-NetTCPConnection -LocalPort 8080 -State Listen -ErrorAction SilentlyContinue | Select-Object -ExpandProperty OwningProcess -Unique); if($p){$p | ForEach-Object {Stop-Process -Id $_ -Force -ErrorAction SilentlyContinue}}"
      ],
      "problemMatcher": []
    },
    {
      "label": "vite: clean start (5173)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        "$p=(Get-NetTCPConnection -LocalPort 5173 -State Listen -ErrorAction SilentlyContinue | Select-Object -ExpandProperty OwningProcess -First 1); if($p){Stop-Process -Id $p -Force}; npm.cmd run dev -- --host 0.0.0.0 --port 5173"
      ],
      "options": {
        "cwd": "${workspaceFolder}/royal-lens-studios-main"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": [
          {
            "regexp": "^(.*)$",
            "message": 1
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "vite --host 0.0.0.0 --port 5173",
          "endsPattern": "Local:\\s+http://localhost:5173/?"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "vite: stop (5173)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        "$p=(Get-NetTCPConnection -LocalPort 5173 -State Listen -ErrorAction SilentlyContinue | Select-Object -ExpandProperty OwningProcess -First 1); if($p){Stop-Process -Id $p -Force}"
      ],
      "problemMatcher": []
    },
    {
      "label": "fullstack: clean start (backend + vite)",
      "dependsOn": [
        "backend: clean start (8080)",
        "vite: clean start (5173)"
      ],
      "dependsOrder": "parallel",
      "problemMatcher": []
    }
  ]
}
